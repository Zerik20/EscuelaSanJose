---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
---

<ContentSection title="Admisiones" id="admis">
  <!-- Contenido principal -->
  <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
    <a
      href="https://astro.new/"
      class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4"
    >
      <Icon name="mdi:rocket" class="size-8" />
      <span>Preguntas Frecuentes</span>
    </a>
    <a id="toggleFormButton" href="#" class="flex items-center justify-center gap-3 border-2 border-current px-6 py-4">
      <Icon name="mdi:telescope" class="size-8" />
      <span>Formulario de aplicación</span>
    </a>
  </div>
  <form id="formulario" class="hidden mt-4">
    <!-- Contenido de tu formulario -->
    <div class="flex flex-col items-center">
      <label for="nombre" class="mb-2">Nombre:</label>
      <input type="text" id="nombre" name="nombre" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500">
      <!-- Agrega aquí el resto de los campos de tu formulario -->
      <!-- Ejemplo de otro campo -->
      <label for="email" class="mb-2">Email:</label>
      <input type="email" id="email" name="email" class="w-full px-4 py-2 mb-4 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500">
      
      <!-- Botón de enviar -->
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600">Enviar</button>
    </div>
  </form>

  <!-- Script -->
  <script>
    const toggleForm = (event: MouseEvent) => {
      event.preventDefault();
      const form = document.getElementById('formulario');
      if (form) {
        form.classList.toggle('hidden');
      }
    };

    const toggleFormButton = document.getElementById('toggleFormButton');
    if (toggleFormButton) {
      toggleFormButton.addEventListener('click', toggleForm);
    }
  </script>
</ContentSection>