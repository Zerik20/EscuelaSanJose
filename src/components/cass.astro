---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Cultura",
    description:
      "El conjunto de creencias, valores y tradiciones compartidas por un grupo de personas.",
    icon: "mdi:account-group",
  },
  {
    title: "Arte",
    description:
      "Expresión creativa que puede tomar diversas formas como la pintura, la música, la literatura, etc.",
    icon: "mdi:feather",
  },
  {
    title: "Sports",
    description:
      "Actividades físicas o mentales que promueven la salud y el trabajo en equipo, como el fútbol, el baloncesto, etc.",
    icon: "sports/atletismo"
  },
  {
    title: "Servicio Comunitario",
    description:
      "Actividad voluntaria para beneficiar a una comunidad, como ayudar a los necesitados o mejorar el medio ambiente.",
    icon: "mdi:handshake",
  },
];
---

<ContentSection title="C.A.S.S" id="cass">
  <Fragment slot="lead">
    Proporcionamos a los estudiantes 
    <span class="text-primary">experiencias en diversas áreas </span>
    para promover su desarrollo holístico, 
    <span class="text-primary">formar individuos bien preparados </span>
    y equilibrados <span class="text-primary">.</span>
</Fragment>

  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-2">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
