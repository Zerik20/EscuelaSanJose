---
import { getCollection } from "astro:content";
import ContentSection from "~/components/content-section.astro";
import NewsCard from "./news-card.astro";

const featuredSites = await getCollection(
  "showcase",
  ({ data }) => "featured" in data,
);
const orderedSites = featuredSites.sort(
  (a, b) => a.data.featured! - b.data.featured!,
);
---

<ContentSection title="News" id="news">
  <Fragment slot="lead">
    The <span class="text-primary">most relevant </span>{" "}
    <span class="text-primary">news</span>  for{" "}
    <span class="text-primary">today</span>.
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {orderedSites.map((site) => <NewsCard site={site} />)}
    </div>
    <p class="text-right text-sm">
      <a class="text-primary" href="https://astro.build/showcase/">
        ...and more &rarr;
      </a>
    </p>
  </div>
</ContentSection>
